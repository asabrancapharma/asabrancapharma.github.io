<style is:global>
  :root {
    --primary-color: #3498db; /* a shade of blue */
    --secondary-color: #2ecc71; /* a shade of green */
    --background-color: #ecf0f1; /* a light gray */
    --text-color: #2c3e50; /* a dark gray for text */
    --error-color: #e74c3c; /* a shade of red for errors */
    --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
    --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
    --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

    --color-text: hsl(12, 5%, 4%);
    --color-bg: hsl(10, 21%, 95%);
    --color-border: hsl(17, 24%, 90%);
  }

  html {
    font-family: Roboto, system-ui, sans-serif;
    font-size: var(--font-size-base);
    color: var(--color-text);
    background-color: var(--color-bg);
  }

  body {
    margin: 0;
  }

  :global(h1) {
    font-size: var(--font-size-xl);
  }

  :global(h2) {
    font-size: var(--font-size-lg);
  }

  :global(code) {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  body,
  html {
    color: #cccccc;
    background-color: #091c60;
  }

  a:hover {
    color: #939aff;
  }

  header {
    display: flex;
    flex-flow: row;
    justify-content: center;
    align-items: center;
    margin: 0;
    padding: 20px 10px 10px;
  }

  header img {
    width: 100%;
    max-width: 600px;
  }

  main {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>
