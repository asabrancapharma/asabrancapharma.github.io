---
import "./Layout.css";
import asaBrancaLogoSEO from "./asabrancapharma-logo3.png";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="canonical" href="https://asabrancapharma.com.br" />

    <title>{title}</title>

    <!-- Other head elements -->
